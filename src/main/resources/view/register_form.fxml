                  <Font size="14.0" />
               </font></Hyperlink>
            <Label layoutX="122.0" layoutY="327.0" text="Confirm Password*" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="95.0" layoutY="325.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/password.png" />
               </image>
            </ImageView>
            <PasswordField fx:id="txtConPassword" layoutX="88.0" layoutY="351.0" prefHeight="30.0" prefWidth="288.0" promptText="Type Password Again" style="-fx-background-color: white; -fx-background-radius: 20;" />
            <Label layoutX="121.0" layoutY="119.0" text="Email*" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="94.0" layoutY="116.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/email.png" />
               </image>
            </ImageView>
            <TextField fx:id="txtEmail" accessibleRole="PARENT" focusTraversable="false" layoutX="87.0" layoutY="143.0" prefHeight="30.0" prefWidth="288.0" promptText="Type your email here" style="-fx-background-color: white; -fx-background-radius: 20;" />
