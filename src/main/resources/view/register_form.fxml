   <children>
      <ImageView fitHeight="500.0" fitWidth="750.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/register.png" />
         </image>
      </ImageView>
      <AnchorPane layoutX="312.0" prefHeight="500.0" prefWidth="438.0">
         <children>
            <Label layoutX="121.0" layoutY="188.0" text="Username*" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="94.0" layoutY="185.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/user.png" />
               </image>
            </ImageView>
            <Label layoutX="121.0" layoutY="255.0" text="Password*" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="94.0" layoutY="253.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/password.png" />
               </image>
            </ImageView>
            <JFXButton buttonType="RAISED" layoutX="141.0" layoutY="403.0" onAction="#btnRegisterOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: rgba(229, 142, 38,1.0); -fx-background-radius: 16;" text="Register" textFill="#f5ecec">
