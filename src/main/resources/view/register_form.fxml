            <TextField fx:id="txtUserName" accessibleRole="PARENT" focusTraversable="false" layoutX="87.0" layoutY="212.0" prefHeight="30.0" prefWidth="288.0" promptText="Type your name here" style="-fx-background-color: white; -fx-background-radius: 20;" />
            <PasswordField fx:id="txtPassword" layoutX="87.0" layoutY="279.0" prefHeight="30.0" prefWidth="288.0" promptText="Create 8 digits password" style="-fx-background-color: white; -fx-background-radius: 20;" />
